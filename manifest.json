{
    "manifest_version": 3,

    "name": "ITVX Adblocker",
    "version": "0.1.0",
    "author": "Arthur Jarvis",
    "description": "Remove ad breaks from ITVX",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["*://*.itv.com/watch/*"]
        }
    ],

    "permissions": ["storage"]
}